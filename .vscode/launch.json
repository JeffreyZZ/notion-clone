    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "args": [
                "runserver",
                "127.0.0.1:8091"
            ],
            "django": true,
            "justMyCode": true
        },
        {
            "name": "Launch Edge against localhost",
            "type": "msedge",
            "request": "launch",
            "url": "http://localhost:8091",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/**/*.bundle",
                "${workspaceFolder}/**/*.assets"
            ],
        }
    ]
}